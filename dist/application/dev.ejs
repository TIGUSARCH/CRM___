                    const message = nuevaTarea.nombre
                    fetch('/new-message', {
                      method: 'POST',
                      body: JSON.stringify({title: title,message: message}),
                      headers: {
                        'Content-Type': 'application/json'
                      }
                    }); 

                  });
                  
                }
              
                document.getElementById('guardarCambiosEditarTarea').addEventListener('click', () => {
